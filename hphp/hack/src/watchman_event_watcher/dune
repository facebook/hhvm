(library
 (name watchman_config)
 (wrapped false)
 (modules watchmanEventWatcherConfig)
 (libraries injector_config server_utils))

(library
 (name watchman_lib)
 (wrapped false)
 (modules watchmanEventWatcher)
 (libraries socket watchman_config watchman_utils))

