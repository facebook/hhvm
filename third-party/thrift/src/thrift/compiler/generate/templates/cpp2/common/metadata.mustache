{{! Const value metadata for structured annotations }}
{{#let partial cv_metadata |value|}}
{{#pragma ignore-newlines}}

{{#if value.bool?}}cvBool({{value.bool_value}})
{{#else if (or value.integer? value.enum?)}}cvInteger({{value.integer_value}})
{{#else if value.double?}}cvDouble({{value.double_value}})
{{#else if value.string?}}cvString("{{value.string_value}}")

  {{#else if value.structured?}}
    {{#let ttype = value.type.true_type}}
cvStruct("{{ttype.program.name}}.{{ttype.name}}", { {{!}}
     {{#each (array.enumerate value.structured_elements with_last=true) as |i elem last?|}}
{"{{elem.field.name}}", {{#partial cv_metadata value=elem.value}} }{{#if (not last?)}}, {{/if}}
     {{/each}}
 })

  {{#else if value.map?}}
cvMap({ {{!}}
    {{#each (array.enumerate value.map_elements with_last=true) as |i elem last?|}}
cvPair({{#partial cv_metadata value=elem.key}}, {{#partial cv_metadata value=elem.value}}){{#if (not last?)}}, {{/if}}
    {{/each}}
 })

  {{#else if value.list?}}
cvList({ {{!}}
    {{#each (array.enumerate value.list_elements with_last=true) as |i elem last?|}}
{{#partial cv_metadata value=elem}}{{#if (not last?)}}, {{/if}}
    {{/each}}
 })

  {{/if value.bool?}}
{{/let partial}}

{{! A single structured annotation value }}
{{#let export partial structured_annotation |value| captures |cv_metadata|}}
{{#pragma ignore-newlines}}
*{{#partial cv_metadata value=value}}.cv_struct()
{{/let partial}}
