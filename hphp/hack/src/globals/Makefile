TOP=..
##############################################################################
# Variables
##############################################################################
TARGET=lib

SRC= serverConfig.ml autocomplete.ml silent.ml find_refs.ml ide.ml

INCLUDEDIRS=$(TOP)/utils

##############################################################################
# Generic variables
##############################################################################

-include $(TOP)/Makefile.common

##############################################################################
# Top rules
##############################################################################
all:: $(TARGET).cma
all.opt:: $(TARGET).cmxa

$(TARGET).cma: $(OBJS)
	$(OCAMLC) -a -o $@ $^

$(TARGET).cmxa: $(OBJS:.cmo=.cmx) $(LIBS:.cma=.cmxa)
	$(OCAMLOPT) -a -o $@ $^

