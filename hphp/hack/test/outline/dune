(alias
    (name outline)
    (deps %{exe:../../src/hh_single_type_check.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/outline/HH_FLAGS)
          (glob_files %{project_root}/test/outline/*.php)
          (glob_files %{project_root}/test/outline/*.exp))
    (action (run %{project_root}/test/verify.py %{project_root}/test/outline
    --program %{exe:../../src/hh_single_type_check.exe})))

(alias
    (name runtest)
    (deps (alias outline)))
