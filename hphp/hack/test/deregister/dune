(alias
    (name deregister)
    (deps %{exe:../../src/hh_single_type_check.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/deregister/*.php)
          (glob_files %{project_root}/test/deregister/*.exp)
          (glob_files %{project_root}/test/deregister/HH_FLAGS))
    (action (run %{project_root}/test/verify.py %{project_root}/test/deregister
    --program %{exe:../../src/hh_single_type_check.exe}
    --flags --error-format raw)))

(alias
    (name runtest)
    (deps (alias deregister)))
