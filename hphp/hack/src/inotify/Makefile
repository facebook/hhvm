TOP=..
##############################################################################
# Variables
##############################################################################

SRC= inotify_stubs.o inotify.ml

##############################################################################
# Generic variables
##############################################################################

-include $(TOP)/Makefile.common

##############################################################################
# Top rules
##############################################################################
all:: inotify
all.opt:: inotify.opt

inotify: $(OBJS)
	ocamlmklib -o inotify -L. $^
inotify.opt: $(OBJS:.cmo=.cmx) $(LIBS:.cma=.cmxa)
	ocamlmklib -o inotify -L. $^
