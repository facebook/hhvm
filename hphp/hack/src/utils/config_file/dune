 (targets libconfig_file_ffi.a)
 (deps
  (source_tree %{workspace_root}/hack/src))
 (locks /cargo)
 (action
  (run
   %{workspace_root}/hack/scripts/invoke_cargo.sh
   config_file_ffi
   config_file_ffi)))

