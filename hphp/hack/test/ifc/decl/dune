(alias
    (name ifc)
    (deps %{exe:../../../src/hh_single_type_check.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/ifc/decl/*.php)
          (glob_files %{project_root}/test/ifc/decl/*.php.exp))
    (action (run %{project_root}/test/verify.py %{project_root}/test/ifc/decl
    --program %{exe:../../../src/hh_single_type_check.exe}
    --in-extension .php
    --flags
    --ifc decl ""
    --error-format raw
    )))

(alias
    (name runtest)
    (deps
      (alias ifc)))
