(alias
    (name shape_analysis)
    (deps %{exe:../../../src/hh_single_type_check.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/shape_analysis/simplify_constraints/*.php)
          (glob_files %{project_root}/test/shape_analysis/simplify_constraints/*.php.exp))
    (action (run %{project_root}/test/verify.py %{project_root}/test/shape_analysis/simplify_constraints
    --program %{exe:../../../src/hh_single_type_check.exe}
    --in-extension .php
    --flags
    --union-intersection-type-hints
    --shape-analysis simplify
    --error-format raw
    )))

(alias
    (name runtest)
    (deps
      (alias shape_analysis)))
