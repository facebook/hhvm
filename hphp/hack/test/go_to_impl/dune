(alias
    (name go_to_impl)
    (deps %{exe:../../src/hh_single_type_check.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/go_to_impl/HH_FLAGS)
          (glob_files %{project_root}/test/go_to_impl/*.flags)
          (glob_files %{project_root}/test/go_to_impl/*.php)
          (glob_files %{project_root}/test/go_to_impl/*.exp))
    (action (run %{project_root}/test/verify.py %{project_root}/test/go_to_impl
    --program %{exe:../../src/hh_single_type_check.exe})))

(alias
    (name runtest)
    (deps (alias go_to_impl)))
