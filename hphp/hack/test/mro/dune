(alias
    (name mro)
    (deps %{exe:../../src/hh_single_type_check.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/mro/*.php)
          (glob_files %{project_root}/test/mro/*.exp))
    (action (run %{project_root}/test/verify.py %{project_root}/test/mro
    --program %{exe:../../src/hh_single_type_check.exe}
    --flags --mro
    --shallow-class-decl
    --no-builtins)))

(alias
    (name runtest)
    (deps (alias mro)))
