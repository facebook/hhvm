(library
 (name rust_parser_ffi)
 (modules)
 (wrapped false)
 (libraries ocamlpool)
 (c_library_flags -lpthread)
 (foreign_archives rust_parser_ffi))

(rule
 (targets librust_parser_ffi.a)
 (deps
  (source_tree %{workspace_root}/src))
 (locks /cargo)
 (action
  (run
   %{workspace_root}/scripts/invoke_cargo.sh
   hack_parser_ffi
   rust_parser_ffi)))

