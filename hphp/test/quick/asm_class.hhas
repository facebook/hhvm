#
# Basic test of classes for hip hop assembler.
#


.class Base {
  .method [public] N __construct {
    String "default constructor\n"
    Print
    PopC

    Null
    RetC
  }

  .method [public static] N print_it(N $x) {
    CGetL $x
    String "\n"
    Concat
    Print
    PopC

    True
    RetC
  }

  .method [protected] N prot_method() {
    String "In protected method\n"
    Print
    RetC
  }

  .method [public] N overriden() {
    String "Base::overriden\n"
    Print
    RetC
  }
}

.class [interface] IDunno {
  .default_ctor;
  .method [public abstract] N abs_method {
    String "Pure virtual method called"
    Fatal RuntimeOmitFrame
  }
}

.class [interface] IDunno2 { .default_ctor; }

.class Derived extends Base implements(IDunno IDunno2) {
  .method [public] N some_junk {
    This
    NullUninit
    FCallObjMethodD <> 0 1 "" "" - "" "" NullThrows "prot_method"
    PopC

    Null
    RetC
  }

  .method [public] N overriden() {
    String "Derived::overriden\n"
    Print
    RetC
  }

  .method [public] N abs_method() {
    String "in an abstract method\n"
    Print
    RetC
  }
}

.class WithProps {
  .property [public] N funk;

  .method [public] N print_funk {
    .declvars $name;
    String "funk"
    SetL $name
    PopC

    This
    BaseC 0 Warn
    QueryM 1 CGet PL:$name Any
    String "\n"
    Concat
    Print
    RetC
  }

  .property [private] N defaulted = """s:3:"heh";""";
  .property [private] N badstring =
    """s:30:"bad string\"""has triple quotes";""";

  .method [public] N print_defaulted {
    This
    BaseC 0 Warn
    QueryM 1 CGet PT:"defaulted" Any
    String "\n"
    Concat
    Print
    PopC

    This
    BaseC 0 Warn
    QueryM 1 CGet PT:"badstring" Any
    String "bad string\"\"\"has triple quotes"
    Eq
    JmpZ broken
    True
    RetC

    broken: String "string escaping is broken\n"
            Print
            RetC
  }
}

.function N prop_test {
  .declvars $obj;
  NewObjD "WithProps"
  Dup
  NullUninit
  FCallCtor <LockWhileUnwinding> 0 1 "" "" - "" ""
  PopC
  LockObj
  SetL $obj
  PopC

  String "funk"
  String "value of funk"
  BaseL $obj Define Any
  SetM 1 PC:1 Any
  PopC

  CGetL $obj
  NullUninit
  FCallObjMethodD <> 0 1 "" "" - "" "" NullThrows "print_funk"
  PopC

  CGetL $obj
  NullUninit
  FCallObjMethodD <> 0 1 "" "" - "" "" NullThrows "print_defaulted"
  PopC

  True
  RetC
}

.function ["__EntryPoint"("""y:0:{}""")] N main {
  .declvars $base $derived;
  NewObjD "Base"
  Dup
  NullUninit
  FCallCtor <LockWhileUnwinding> 0 1 "" "" - "" ""
  PopC
  LockObj
  SetL $base
  PopC
  NullUninit
  NullUninit
  String "printing this string"
  String "print_it"
  String "Base"
  ClassGetC Normal
  FCallClsMethod <> 1 1 "" "" - "" "" LogAsDynamicCall
  PopC

  NewObjD "Derived"
  Dup
  NullUninit
  FCallCtor <LockWhileUnwinding> 0 1 "" "" - "" ""
  PopC
  LockObj
  SetL $derived
  PopC

  CGetL $derived
  NullUninit
  FCallObjMethodD <> 0 1 "" "" - "" "" NullThrows "some_junk"
  PopC

  CGetL $base
  NullUninit
  FCallObjMethodD <> 0 1 "" "" - "" "" NullThrows "overriden"
  PopC

  CGetL $derived
  NullUninit
  FCallObjMethodD <> 0 1 "" "" - "" "" NullThrows "overriden"
  PopC

  CGetL $derived
  NullUninit
  FCallObjMethodD <> 0 1 "" "" - "" "" NullThrows "abs_method"
  PopC
  NullUninit
  NullUninit
  FCallFuncD <> 0 1 "" "" - "" "prop_test"
  PopC

  Int 1
  RetC
}
