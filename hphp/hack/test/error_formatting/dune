(alias
    (name context_formatting)
    (deps %{exe:../../src/hh_single_type_check.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/error_formatting/*.php)
          (glob_files %{project_root}/test/error_formatting/*.exp)
          (glob_files %{project_root}/test/error_formatting/HH_FLAGS))
    (action (run %{project_root}/test/verify.py %{project_root}/test/error_formatting
    --program %{exe:../../src/hh_single_type_check.exe})))

(alias
  (name runtest)
  (deps (alias context_formatting)))
