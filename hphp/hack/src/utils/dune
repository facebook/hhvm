    get_build_id
    get_build_id_gen)
  (c_flags (:standard
    -I%{env:CMAKE_SOURCE_DIR=xxx}
    (:include config/build-id-opt)
    (:include config/build-timestamp-opt)))
  (libraries
    string
    imported_core
    hh_json
    str
    unix)
  (preprocess
    (pps lwt_ppx ppx_deriving.std ppx_deriving.enum)))

