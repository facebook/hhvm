
(alias
    (name highlight_refs)
    (deps %{exe:../../src/hh_single_type_check.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/highlight_refs/HH_FLAGS)
          (glob_files %{project_root}/test/highlight_refs/*.flags)
          (glob_files %{project_root}/test/highlight_refs/*.php)
          (glob_files %{project_root}/test/highlight_refs/*.exp))
    (action (run %{project_root}/test/verify.py %{project_root}/test/highlight_refs
    --program %{exe:../../src/hh_single_type_check.exe})))

(alias
    (name runtest)
    (deps (alias highlight_refs)))
