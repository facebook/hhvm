(library
 (name diagnostics_ffi)
 (modules)
 (wrapped false)
 (foreign_archives diagnostics_ffi))

(rule
 (targets libdiagnostics_ffi.a)
 (deps
  (source_tree %{workspace_root}/hack/src))
 (locks /cargo)
 (action
  (run %{workspace_root}/hack/scripts/invoke_cargo.sh diagnostics_ffi diagnostics_ffi)))
