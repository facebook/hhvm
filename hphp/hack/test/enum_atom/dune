(alias
    (name enum_atom)
    (deps %{exe:../../src/hh_single_type_check.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/enum_atom/*.php)
          (glob_files %{project_root}/test/enum_atom/HH_FLAGS)
          (glob_files %{project_root}/test/enum_atom/*.php.exp))
    (action (run %{project_root}/test/verify.py %{project_root}/test/enum_atom
    --program %{exe:../../src/hh_single_type_check.exe}
    --in-extension .php
    --out-extension .legacy_decl.out
    --expect-extension .legacy_decl.exp
    --fallback-expect-extension .exp
    --flags
    --error-format raw
    )))

(alias
    (name enum_atom_shallow_decl)
    (deps %{exe:../../src/hh_single_type_check.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/enum_atom/*.php)
          (glob_files %{project_root}/test/enum_atom/HH_FLAGS)
          (glob_files %{project_root}/test/enum_atom/*.php.exp))
    (action (run %{project_root}/test/verify.py %{project_root}/test/enum_atom
    --program %{exe:../../src/hh_single_type_check.exe}
    --in-extension .php
    --flags
    --shallow-class-decl
    --error-format raw
    )))

(alias
    (name runtest)
    (deps
        (alias enum_atom)
        (alias enum_atom_shallow_decl)))
