  test_server_hover
  test_serverConfig_overrides
  test_unbound_name
  test_unbound_name_2
  test_unbound_name_3)
 (libraries runner_base))

(rule
 (targets test_all.exe)
 (action
  (copy runner.exe test_all.exe)))

