TOP=..
##############################################################################
# Variables
##############################################################################
TARGET=lib

SRC= worker.ml bucket.ml multiWorker.ml

# for Fork
INCLUDEDIRS=$(TOP)/utils $(TOP)/globals

##############################################################################
# Generic variables
##############################################################################

-include $(TOP)/Makefile.common

##############################################################################
# Top rules
##############################################################################
all:: $(TARGET).cma
all.opt:: $(TARGET).cmxa

$(TARGET).cma: $(OBJS)
	$(OCAMLC) -a -o $@ $^

$(TARGET).cmxa: $(OBJS:.cmo=.cmx) $(LIBS:.cma=.cmxa)
	$(OCAMLOPT) -a -o $@ $^
