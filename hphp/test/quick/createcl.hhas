.hh_file 1;
# tests that verifier checks properties of the CreateCl bytecode

.main {
  NullUninit
  NullUninit
  NullUninit
  FCallFuncD <> 0 1 "" - "" "foo"
  PopC
  NullUninit
  NullUninit
  NullUninit
  FCallFuncD <> 0 1 "" - "" "bar"
  PopC
  NullUninit
  NullUninit
  NullUninit
  FCallFuncD <> 0 1 "" - "" "baz"
  PopC

  Int 1
  RetC
}

.function foo() {
  Int 1
  Int 1
  Int 1
  CreateCl 3 0
  RetC
}

.function bar() {
  CreateCl 0 1
  RetC
}

.function baz() {
  CreateCl 0 2
  RetC
}

.class [unique] A extends Closure {
  .method [public] <"" N  > __invoke() isClosureBody {
    Int 1
    RetC
  }
}

.class B {
  .method [public] <"" N  > foo() {
    Int 1
    RetC
  }
}
