(alias
    (name enum_class_typing_good)
    (deps %{exe:../../../src/hh_single_type_check.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/enum_class/typing/*.good.php)
          (glob_files %{project_root}/test/enum_class/typing/*.good.php.exp)
          (glob_files %{project_root}/test/enum_class/typing/*.good.php.legacy_decl.exp))
    (action (run %{project_root}/test/verify.py %{project_root}/test/enum_class/typing
    --program %{exe:../../../src/hh_single_type_check.exe}
    --in-extension .good.php
    --out-extension .legacy_decl.out
    --expect-extension .legacy_decl.exp
    --fallback-expect-extension .exp
    --flags
    --out-extension .legacy_decl.out
    )))

(alias
    (name enum_class_typing_bad)
    (deps %{exe:../../../src/hh_single_type_check.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/enum_class/typing/*.bad.php)
          (glob_files %{project_root}/test/enum_class/typing/*.bad.php.exp)
          (glob_files %{project_root}/test/enum_class/typing/*.bad.php.legacy_decl.exp))
    (action (run %{project_root}/test/verify.py %{project_root}/test/enum_class/typing
    --program %{exe:../../../src/hh_single_type_check.exe}
    --in-extension .bad.php
    --out-extension .legacy_decl.out
    --expect-extension .legacy_decl.exp
    --fallback-expect-extension .exp
    --flags
    --out-extension .legacy_decl.out
    --error-format raw)))

(alias
    (name enum_class_typing_shallow_decl_good)
    (deps %{exe:../../../src/hh_single_type_check.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/enum_class/typing/*.good.php)
          (glob_files %{project_root}/test/enum_class/typing/*.good.php.exp))
    (action (run %{project_root}/test/verify.py %{project_root}/test/enum_class/typing
    --program %{exe:../../../src/hh_single_type_check.exe}
    --in-extension .good.php
    --flags
    --shallow-class-decl
    )))

(alias
    (name enum_class_typing_shallow_decl_bad)
    (deps %{exe:../../../src/hh_single_type_check.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/enum_class/typing/*.bad.php)
          (glob_files %{project_root}/test/enum_class/typing/*.bad.php.exp))
    (action (run %{project_root}/test/verify.py %{project_root}/test/enum_class/typing
    --program %{exe:../../../src/hh_single_type_check.exe}
    --in-extension .bad.php --flags
    --shallow-class-decl --error-format raw)))

(alias
    (name runtest)
    (deps
        (alias enum_class_typing_good)
        (alias enum_class_typing_bad)
        (alias enum_class_typing_shallow_decl_good)
        (alias enum_class_typing_shallow_decl_bad)))
