#
# Test some function call junk
#

.main {
  FPushFuncD 0 "main"
  FCall <> 0 1 - "" ""
  PopC
  Null
  RetC
}

.function caller($who, $arg) {
  CGetL $who
  FPushFunc 1
  CGetL $arg
  FCall <> 1 1 - "" ""

  SetL $ret
  PopC

  CGetL $ret
  FPushFunc 0
  FCall <> 0 1 - "" ""
  PopC

  True
  RetC
}

.function b() {
  String "In b() now\n"
  Print
  PopC

  True
  RetC
}

.function a($arg) {
  CGetL $arg
  String "\n"
  Concat
  Print
  PopC

  CGetL $arg
  RetC
}

.function byref(&$foo) {
  Int 42
  SetL $foo
  RetC
}

.function main() {
  FPushFuncD 2 "caller"
  String "a"
  String "b"
  FCall <> 2 1 - "" ""
  PopC

  String "strval"
  SetL $funk
  PopC
  FPushFuncD 1 "byref"
  VGetL $funk
  FCall <> 1 1 - "" ""
  PopC
  CGetL $funk
  Print
  PopC
  String "\n"
  Print
  PopC

  True
  RetC
}
