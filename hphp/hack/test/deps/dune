(alias
    (name deps)
    (deps %{exe:../../src/hh_single_type_check.exe}
          %{project_root}/test/verify.py
          %{project_root}/test/review.sh
          (glob_files %{project_root}/test/deps/*.php)
          (glob_files %{project_root}/test/deps/*.exp)
          (glob_files %{project_root}/test/deps/HH_FLAGS))
    (action (run %{project_root}/test/verify.py %{project_root}/test/deps
    --program %{exe:../../src/hh_single_type_check.exe})))

(alias
    (name runtest)
    (deps (alias deps)))
