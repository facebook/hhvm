    {{svc.extends.go_qualified_name}}

    {{/if (and (not svc.interaction?) svc.extends)}}
    {{#each svc.functions as |func|}}
    {{#if func.go_server_supported?}}
    {{#partial handler_func_signature func=func}}

    {{/if func.go_server_supported?}}
    {{/each}}
}
